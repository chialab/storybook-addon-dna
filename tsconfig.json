{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": false,
    "isolatedModules": true,
    "lib": ["es2017", "dom"],
    "module": "commonjs",
    "noImplicitAny": true,
    "rootDir": "./lib",
    "skipLibCheck": true,
    "target": "es2017",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true
  },
  "include": [
    "lib/**/*"
  ],
}